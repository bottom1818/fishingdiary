<h1><%= @user.name %>のページ</h1>

<p>メールアドレス: <%= @user.email %></p>

<% @favorite_blogs.each do |blog| %>
  <div class="col-xs-12 col-md-6 blog-panel">
    <div class="blog-panel">
      <h2><%= blog.title %></h2>
        <p><%= blog.content %></p>
        <p><%= blog.user.name %></p>
    </div>
  </div>
<% end %>

<p>
  <strong>Image:</strong>
  <%= image_tag @user.image %>
</p>